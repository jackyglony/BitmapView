<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical"
    tools:context=".ui.GalleryFragment">

    <com.qiibeta.bitmapviewsample.support.FixViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.qiibeta.bitmapviewsample.support.FixViewPager>

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="0dp"
        android:background="#ccffffff"
        android:elevation="4dp"
        android:navigationIcon="?android:attr/homeAsUpIndicator"
        android:paddingTop="22dp"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light"
        android:theme="@android:style/ThemeOverlay.Material.ActionBar" />
</FrameLayout>